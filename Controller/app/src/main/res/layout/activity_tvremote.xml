<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rmriales.controller.TVRemote">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dirLeft"
        android:clickable="true"
        android:src="@drawable/ic_arrow_back_48pt_2x"
        android:layout_below="@+id/dirUp"
        android:layout_toLeftOf="@+id/dirUp"
        android:layout_toStartOf="@+id/dirUp"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dirUp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/OKAY"
        android:layout_alignStart="@+id/OKAY"
        android:src="@drawable/ic_arrow_upward_48pt_2x"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dirRight"
        android:src="@drawable/ic_arrow_forward_48pt_2x"
        android:layout_below="@+id/dirUp"
        android:layout_toRightOf="@+id/dirUp"
        android:layout_toEndOf="@+id/dirUp"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dirDown"
        android:src="@drawable/ic_arrow_downward_black_48dp_2x"
        android:layout_below="@+id/dirLeft"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OKAY"
        android:layout_alignTop="@+id/dirLeft"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_filter_center_focus_48pt_2x"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Netflix"
        android:src="@drawable/netflix_logo"
        android:layout_below="@+id/Apps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AmazonPrime"
        android:src="@drawable/amazon_instant_video"
        android:layout_below="@+id/Apps"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Apps"
        android:src="@drawable/ic_apps_48pt_2x"
        android:layout_below="@+id/dirDown"
        android:layout_alignLeft="@+id/dirDown"
        android:layout_alignStart="@+id/dirDown"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PowerButton"
        android:layout_above="@+id/dirLeft"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:src="@drawable/ic_power_settings_new_48pt_2x" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_above="@+id/Netflix"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitButton"
        android:layout_alignTop="@+id/backButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="false"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input"
        android:id="@+id/inputButton"
        android:layout_above="@+id/dirRight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

</RelativeLayout>
